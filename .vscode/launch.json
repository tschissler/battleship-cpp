    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ build and debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/MAKE/Battleship.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
                }
            ],
            "preLaunchTask": "g++ build makefile",
            "miDebuggerPath": "/usr/bin/gdb",            
            "sourceFileMap": {
                "/battleship": "${workspaceFolder}"
            }
        },
        {
            "name": "g++ build and run tests",
            "type": "shell",
            "request": "launch",
            "program": "${workspaceFolder}/MAKE/TestRunner.exe",
            "args": [],
